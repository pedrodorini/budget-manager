<% include ../partials/header %>
<div class="container">
  <div class="row wrap card">
    <h1>Add item to your budget</h1>
    <form class="form-group" action="/budget" method="POST">
      <input type="text" name="description" placeholder="Description">
      <input type="number" name="value" placeholder="Value">
      <select class="mg-b" name="type">
        <option value="expense">Expense</option>
        <option value="income">Income</option>
      </select>
      <select name="month">
        <option value="january">January</option>
        <option value="february">February</option>
        <option value="march">March</option>
        <option value="april">April</option>
        <option value="may">May</option>
        <option value="june">June</option>
        <option value="july">July</option>
        <option value="august">August</option>
        <option value="september">September</option>
        <option value="october">October</option>
        <option value="november">November</option>
        <option value="december">December</option>
      </select>
      <button class="btn" type="submit">Add!</button>
    </form>
  </div>
  <div class="row wrap">
    <div class="large-6 small-12 columns incomes-expenses">
      <div class="card table">
        <h1>Incomes</h1>
        <div class="small-12 table-header">
          <div class="small-12 large-4 columns table-desc">Description</div>
          <div class="small-12 large-4 columns table-val">Value</div>
          <div class="small-12 large-4 columns table-val">Delete/Edit</div>
        </div>
        <div class="small-12 table">
          <% if (budget) { %>
              <% for (income of budget.incomes) { %>
                <% if (income.description) { %>
                  <div class="small-12 large-4 columns table-desc budget-row"><%= income.description %></div>
                  <div class="small-12 large-4 columns table-val budget-row">$<%= income.value.toFixed(2) %></div>
                  <div class="small-12 large-4 columns table-edit-delete budget-row">
                    <a class="btn btn-small" href="">Delete</a>
                    <a class="btn btn-small" href="">Edit</a>
                  </div>
                <% } %>
              <% } %>
            <% } %>
        </div>
      </div>
    </div>
    <div class="large-6 small-12 columns incomes-expenses">
      <div class="card table">
        <h1>Expenses</h1>
        <div class="small-12 table-header">
          <div class="small-12 large-4 columns table-desc">Description</div>
          <div class="small-12 large-4 columns table-val">Value</div>
          <div class="small-12 large-4 columns table-val">Delete/Edit</div>
        </div>
        <div class="small-12 table">
          <% if (budget) { %>
            <% for (expense of budget.expenses) { %>
              <% if (expense.description) { %>
                <div class="small-12 large-4 columns table-desc budget-row"><%= expense.description %></div>
                <div class="small-12 large-4 columns table-val budget-row">$<%= expense.value.toFixed(2) %></div>
                <div class="small-12 large-4 columns table-edit-delete budget-row">
                  <a href=""><i class="i-remove"></i></a>
                  <a href=""><i class="i-edit"></i></a>
                </div>
              <% } %>
            <% } %>
          <% } %> 
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>